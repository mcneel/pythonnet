<Project Sdk="Microsoft.NET.Sdk">
  <!-- Project Setup: Windows -->
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
  </PropertyGroup>

  <!-- Project Setup: macOS -->
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
    <OutputPath>..\..\..\..\..\build\xammac2\MockRhino.app\Contents\Frameworks\PythonNet38.framework</OutputPath>
    <DefineConstants>UCS4;MONO_OSX</DefineConstants>
  </PropertyGroup>

  <!-- Project Setup: shared -->
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net48</TargetFramework>
    <!-- <LangVersion>7.3</LangVersion> -->
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);XPLAT;TRACE;DEBUG;PYTHON3;PYTHON38;UCS2</DefineConstants>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <PropertyGroup>
    <DefaultItemExcludes>.DS_Store</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="resources\clr.py">
      <LogicalName>clr.py</LogicalName>
    </EmbeddedResource>
  </ItemGroup>
</Project>
