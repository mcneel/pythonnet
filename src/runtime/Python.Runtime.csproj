<Project Sdk="Microsoft.NET.Sdk">
  <!-- Project Setup: Windows -->
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
    <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
  </PropertyGroup>

  <!-- Project Setup: macOS -->
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
    <DefineConstants>$(DefineConstants);UCS4;MONO_OSX;MACOS</DefineConstants>
  </PropertyGroup>

  <!-- Project Setup: shared -->
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <AssemblyName>McNeel.Python38.Runtime</AssemblyName>
    <TargetFramework>net48</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);PYTHON3;PYTHON38;UCS2;</DefineConstants>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DefineConstants>$(DefineConstants);TRACE;DEBUG;</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <DefaultItemExcludes>.DS_Store</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="resources\clr.py">
      <LogicalName>clr.py</LogicalName>
    </EmbeddedResource>
  </ItemGroup>
</Project>
